{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "strict": true,
    "esModuleInterop": true,
    "lib": [ "es2015", "dom" ],
    "outDir": "./dist/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/module.tsx"],
  "plugins": [{"name": "typescript-tslint-plugin"}]
}
